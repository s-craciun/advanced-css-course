{
  "name": "advanced-css-course",
  "version": "1.0.0",
  "description": "This repo contains starter files and the finished project files for all the projects contained in the course.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass ./Nexter/starter/sass/main.scss ./Nexter/starter/css/style.css -w",
    "devServer": "live-server",
    "start": "npm-run-all --parallel devServer watch:sass",

    "compile:sass": "node-sass ./Nexter/starter/sass/main.scss ./Nexter/starter/css/style.comp.css",
    "concat:css": "concat -o ./Nexter/starter/css/style.concat.css ./Nexter/starter/css/icon-font.css ./Nexter/starter/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./Nexter/starter/css/style.concat.css -o ./Nexter/starter/css/style.prefix.css",
    "compress:css": "node-sass ./Nexter/starter/css/style.prefix.css ./Nexter/starter/css/style.css --output-style compressed",

    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concat": "^1.0.3",
    "live-server": "^1.2.2",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0"
  }
}
